{
  "name": "ccus-policy-hub",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build && pagefind --site dist --output-path dist/pagefind",
    "preview": "astro preview",
    "astro": "astro",
    "prepare": "husky",
    "manage": "node scripts/manage.mjs",
    "manage:db:init": "node scripts/manage.mjs db:init",
    "manage:db:init-standard": "node scripts/init-standardization.mjs",
    "manage:db:import:i18n": "node scripts/manage.mjs db:import:i18n",
    "manage:db:import:md:migration": "node scripts/manage.mjs db:import:md:migration --allow-reverse-sync-migration",
    "manage:db:standardize": "node scripts/manage.mjs db:standardize",
    "manage:db:fix-relationships": "node scripts/manage.mjs db:fix-relationships",
    "manage:db:audit:deep": "node scripts/manage.mjs db:audit:deep",
    "manage:db:audit:facilities-parity": "node scripts/audit-facilities-parity.mjs",
    "manage:db:repair:facilities-from-md": "node scripts/repair-facilities-db-from-md.mjs",
    "manage:db:repair:facilities-from-md:dry-run": "node scripts/repair-facilities-db-from-md.mjs --dry-run",
    "manage:db:export:i18n": "node scripts/manage.mjs db:export:i18n",
    "manage:db:export:md": "node scripts/manage.mjs db:export:md",
    "manage:db:pipeline": "node scripts/manage.mjs db:pipeline",
    "manage:db:lint-governance": "node scripts/manage.mjs db:governance:lint-files",
    "manage:db:optimize": "node scripts/manage.mjs db:optimize",
    "manage:db:clean": "node scripts/manage.mjs db:clean",
    "sync:all": "pnpm manage:db:export:md",
    "check:facilities-parity": "node scripts/audit-facilities-parity.mjs",
    "lint": "eslint . && prettier --check ."
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/rss": "^4.0.15",
    "@astrojs/sitemap": "^3.7.0",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.17.1",
    "chart.js": "^4.5.1",
    "fuse.js": "^7.1.0",
    "leaflet": "^1.9.4",
    "leaflet.markercluster": "^1.5.3",
    "pagefind": "^1.4.0",
    "sql.js": "^1.13.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@types/leaflet": "^1.9.21",
    "@types/leaflet.markercluster": "^1.5.6",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-plugin-astro": "^1.5.0",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.7",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "stylelint": "^17.1.1",
    "stylelint-config-standard": "^40.0.0"
  }
}
