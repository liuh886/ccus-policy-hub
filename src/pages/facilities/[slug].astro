---
import { getCollection, render } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const facilities = await getCollection('facilities_zh');
  return facilities.map(entry => ({
    params: { slug: entry.id }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await render(entry);
const { name, country, location, type, status, capacity, commencementYear, sector, relatedPolicies = [] } = entry.data;

const allPolicies = await getCollection('policies_zh');

// 1. 显式关联：Frontmatter 中定义的
const explicitPolicies = allPolicies.filter(p => {
  return relatedPolicies.includes(p.id);
});

// 2. 严格匹配：本国政策 + 国际标准 (排除已显式关联的)
const applicablePolicies = allPolicies.filter(p => {
  const pCountry = p.data.country;
  const isAlreadyLinked = relatedPolicies.includes(p.id);
  if (isAlreadyLinked) return false;

  const isSameCountry = pCountry === country || 
                       (pCountry === "美国" && country === "USA") ||
                       (pCountry === "中国" && country === "China");
  const isInternational = pCountry === "国际";
  return isSameCountry || isInternational;
});

// 3. 行业对标：他国政策 + 同行业
const benchmarkPolicies = allPolicies.filter(p => {
  const pCountry = p.data.country;
  const pSectors = p.data.sectors || [];
  
  const isDuplicate = applicablePolicies.some(ap => ap.id === p.id) || relatedPolicies.includes(p.id);
  
  const isSectorMatch = sector && pSectors.some(s => 
    sector.toLowerCase().includes(s.toLowerCase()) || 
    s.toLowerCase().includes(sector.toLowerCase())
  );

  return isSectorMatch && !isDuplicate;
});
---

<Layout title={name}>
  <div class="max-w-5xl mx-auto py-8 px-4">
    <nav class="mb-10 text-sm">
      <a href="/facilities" class="text-blue-600 hover:text-blue-700 font-bold flex items-center gap-2 group">
        <div class="p-1 rounded-lg bg-blue-50 group-hover:bg-blue-100 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><path d="m15 18-6-6 6-6"/></svg>
        </div>
        返回全球目录
      </a>
    </nav>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      <div class="lg:col-span-2">
        <header class="mb-12">
          <div class="flex items-center gap-3 mb-6">
            <span class="px-3 py-1 rounded-full bg-slate-100 dark:bg-slate-800 text-slate-500 text-[10px] font-black uppercase tracking-widest border border-slate-200 dark:border-slate-700">
              CCUS Facility Profile
            </span>
            <span class="px-3 py-1 rounded-full bg-blue-50 text-blue-600 text-[10px] font-black uppercase tracking-widest border border-blue-100">
              {sector || 'General'}
            </span>
          </div>
          <h1 class="text-5xl font-black mb-6 text-slate-900 dark:text-white leading-tight">{name}</h1>
          <p class="text-xl text-slate-500 dark:text-slate-400 leading-relaxed border-l-4 border-blue-500 pl-6 italic">
            {entry.data.description}
          </p>
        </header>
        
        <div class="bg-white dark:bg-slate-900 rounded-3xl p-8 border border-slate-200 dark:border-slate-800 shadow-sm mb-12">
          <article class="prose prose-slate dark:prose-invert max-w-none">
            <Content />
          </article>
        </div>

        <!-- 显式关联政策 (新增) -->
        {explicitPolicies.length > 0 && (
          <div class="mb-12 p-8 bg-blue-600 rounded-[2.5rem] text-white shadow-xl shadow-blue-500/20">
            <h2 class="text-2xl font-black mb-6 flex items-center gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/><polyline points="3.27 6.96 12 12.01 20.73 6.96"/><line x1="12" y1="22.08" x2="12" y2="12"/></svg>
              关键支撑政策
            </h2>
            <div class="grid grid-cols-1 gap-4">
              {explicitPolicies.map(p => (
                <a href={`/policy/${p.id.replace(/^zh\//, '')}`} class="block p-6 bg-white/10 hover:bg-white/20 backdrop-blur-md rounded-2xl border border-white/20 transition-all">
                  <div class="flex justify-between items-start mb-2">
                    <h3 class="font-black text-lg">{p.data.title}</h3>
                    {p.data.incentive_usd_per_ton && (
                      <span class="text-xs font-black bg-white text-blue-600 px-2 py-1 rounded">
                        ${p.data.incentive_usd_per_ton}/t
                      </span>
                    )}
                  </div>
                  <p class="text-sm text-blue-100 line-clamp-2">{p.data.description}</p>
                </a>
              ))}
            </div>
          </div>
        )}

        <!-- 分类显示：区域适用政策 -->
        <div class="mb-12">
          <h2 class="text-2xl font-black mb-6 flex items-center gap-3">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" class="text-orange-500"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
            属地准入与一般性规范
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {applicablePolicies.map(p => {
              const pureSlug = p.id.replace(/^zh\//, '');
              return (
                <a href={`/policy/${pureSlug}`} class="group p-5 bg-white dark:bg-slate-900 rounded-2xl border border-slate-200 dark:border-slate-800 hover:border-blue-500 transition-all shadow-sm">
                  <div class="flex justify-between mb-3">
                    <span class="px-2 py-0.5 rounded text-[9px] font-black bg-blue-600 text-white uppercase">{p.data.country}</span>
                    <div class="flex gap-1">
                      {[...Array(p.data.mrv_rigor || 0)].map(() => (
                        <div class="w-1.5 h-1.5 rounded-full bg-orange-500"></div>
                      ))}
                    </div>
                  </div>
                  <h3 class="font-bold text-sm mb-2 group-hover:text-blue-600 transition-colors">{p.data.title}</h3>
                  <p class="text-[11px] text-slate-500 line-clamp-2">{p.data.description}</p>
                </a>
              );
            })}
          </div>
        </div>

        <!-- 分类显示：全球对标 -->
        {benchmarkPolicies.length > 0 && (
          <div>
            <h2 class="text-2xl font-black mb-6 flex items-center gap-3 text-slate-400">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><circle cx="12" cy="12" r="10"/><path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"/><path d="M2 12h20"/></svg>
              全球同行业参考 (Benchmarking)
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 opacity-70 hover:opacity-100 transition-opacity">
              {benchmarkPolicies.slice(0, 4).map(p => {
                const pureSlug = p.id.replace(/^zh\//, '');
                return (
                  <a href={`/policy/${pureSlug}`} class="group p-5 bg-slate-50 dark:bg-slate-800/50 rounded-2xl border border-dashed border-slate-300 dark:border-slate-700 hover:border-blue-400 transition-all">
                    <div class="flex justify-between mb-3">
                      <span class="px-2 py-0.5 rounded text-[9px] font-black bg-slate-200 dark:bg-slate-700 text-slate-600 dark:text-slate-400 uppercase">{p.data.country}</span>
                      <span class="text-[9px] font-black text-blue-500 italic">行业对标</span>
                    </div>
                    <h3 class="font-bold text-sm mb-2 text-slate-700 dark:text-slate-300">{p.data.title}</h3>
                    <p class="text-[10px] text-slate-400 line-clamp-1">该政策可作为 {sector} 行业的重要财务或技术参考。</p>
                  </a>
                );
              })}
            </div>
          </div>
        )}
      </div>

      <!-- Sidebar remained same -->
      <div class="space-y-6">
        <aside class="sticky top-24">
          <div class="bg-slate-900 rounded-3xl p-8 text-white shadow-2xl relative overflow-hidden">
            <h2 class="text-xs font-black text-blue-400 uppercase tracking-widest mb-8 border-b border-white/10 pb-4">Technical Profile</h2>
            <dl class="space-y-6">
              <div>
                <dt class="text-[10px] text-slate-500 uppercase font-black tracking-widest mb-1">Country</dt>
                <dd class="text-base font-bold">{country}</dd>
              </div>
              <div>
                <dt class="text-[10px] text-slate-500 uppercase font-black tracking-widest mb-1">Capacity</dt>
                <dd class="text-3xl font-black text-blue-400">{capacity} <span class="text-sm font-medium text-slate-500">Mtpa</span></dd>
              </div>
              <div>
                <dt class="text-[10px] text-slate-500 uppercase font-black tracking-widest mb-1">Status</dt>
                <dd class="inline-flex items-center gap-2 px-3 py-1 rounded-lg bg-white/5 text-sm font-bold mt-1">
                  <span class={`w-2 h-2 rounded-full ${status === '运行中' ? 'bg-emerald-500' : 'bg-orange-500'}`}></span>
                  {status}
                </dd>
              </div>
            </dl>
          </div>
        </aside>
      </div>
    </div>
  </div>
</Layout>
