---
import type { CollectionEntry } from 'astro:content';

interface Props {
  facility: CollectionEntry<'facilities_en'> | CollectionEntry<'facilities_zh'>;
}

const { facility } = Astro.props;
const {
  name,
  country,
  location,
  type,
  status,
  capacity,
  sector,
  commencementYear,
  precision,
} = facility.data;

const isEn = facility.data.lang === 'en';
const BASE = '/ccus-policy-hub';
const detailHref = `${BASE}/${isEn ? 'en/facilities' : 'facilities'}/${facility.id.replace(/^(en|zh)\//, '')}/`;

// 状态颜色映射
const statusColors: Record<string, string> = {
  运行中: 'bg-emerald-500',
  Operational: 'bg-emerald-500',
  计划中: 'bg-blue-500',
  Planned: 'bg-blue-500',
  开发中: 'bg-blue-400',
  'Under Development': 'bg-blue-400',
};

const statusColor = statusColors[status] || 'bg-slate-400';
---

<div
  class="bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-800 rounded-3xl p-6 hover:shadow-2xl transition-all group flex flex-col h-full relative overflow-hidden"
>
  <!-- Status Badge -->
  <div class="flex justify-between items-start mb-6">
    <div
      class="flex items-center gap-2 px-2.5 py-1 rounded-full bg-slate-100 dark:bg-slate-800 border border-slate-200 dark:border-slate-700"
    >
      <div
        class={`w-2 h-2 rounded-full ${statusColor} shadow-[0_0_8px_rgba(0,0,0,0.1)]`}
      >
      </div>
      <span
        class="text-[10px] font-black uppercase tracking-widest text-slate-600 dark:text-slate-400"
        >{status}</span
      >
    </div>
    {
      precision === 'approximate' && (
        <div
          class="text-orange-500"
          title={isEn ? 'Approximate location' : '区域近似坐标'}
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2.5"
          >
            <>
              <path d="M12 9v4" />
              <path d="M12 17h.01" />
              <path d="m3.34 19 8.66-15 8.66 15H3.34Z" />
            </>
          </svg>
        </div>
      )
    }
  </div>

  <h3
    class="text-xl font-black mb-2 text-slate-900 dark:text-white group-hover:text-blue-600 transition-colors leading-tight line-clamp-2"
  >
    <a href={detailHref}>{name}</a>
  </h3>

  <div
    class="flex items-center gap-2 text-xs font-bold text-slate-400 uppercase tracking-wider mb-6"
  >
    <span>{country}</span>
    <span>•</span>
    <span class="truncate">{location}</span>
  </div>

  <div
    class="grid grid-cols-2 gap-4 mb-6 pt-6 border-t border-slate-100 dark:border-slate-800"
  >
    <div>
      <div
        class="text-[9px] font-black text-slate-400 uppercase tracking-widest mb-1"
      >
        {isEn ? 'Capacity' : '年捕集规模'}
      </div>
      <div class="text-lg font-black text-slate-900 dark:text-white">
        {capacity}
        <span class="text-[10px] font-medium text-slate-400">Mtpa</span>
      </div>
    </div>
    <div>
      <div
        class="text-[9px] font-black text-slate-400 uppercase tracking-widest mb-1"
      >
        {isEn ? 'Type' : '设施类型'}
      </div>
      <div class="text-xs font-bold text-blue-600">{type}</div>
    </div>
  </div>

  <div class="mt-auto flex items-center justify-between">
    <div class="flex flex-col">
      <span
        class="text-[9px] font-black text-slate-400 uppercase tracking-widest"
        >{isEn ? 'Industry' : '所属行业'}</span
      >
      <span class="text-xs font-bold text-slate-600 dark:text-slate-300"
        >{sector || 'General'}</span
      >
    </div>
    <a
      href={detailHref}
      class="p-2.5 rounded-2xl bg-slate-50 dark:bg-slate-800 text-slate-400 group-hover:bg-blue-600 group-hover:text-white transition-all shadow-sm"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="18"
        height="18"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="3"><path d="m9 18 6-6-6-6"></path></svg
      >
    </a>
  </div>
</div>
