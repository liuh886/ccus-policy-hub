{
  "name": "ccus-policy-hub",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build && pagefind --site dist --output-path dist/pagefind",
    "preview": "astro preview",
    "astro": "astro",
    "prepare": "husky",
    "manage:check": "node scripts/manage.mjs check-links",
    "manage:new": "node scripts/manage.mjs new-policy",
    "manage:propose": "node scripts/manage.mjs propose",
    "manage:facilities:standardize": "node scripts/standardize-facilities.mjs",
    "manage:facilities:audit": "node scripts/audit-facilities-deep.mjs",
    "lint": "eslint . && prettier --check .",
    "audit:logic": "node scripts/governance-heartbeat.mjs",
    "audit:geospatial": "node scripts/audit-geospatial-full.mjs",
    "sync:policies": "node scripts/sync-database-to-md.cjs",
    "sync:facilities": "node scripts/sync-facilities-to-md.cjs",
    "sync:all": "pnpm sync:policies && pnpm sync:facilities",
    "governance:full": "pnpm manage:facilities:standardize && pnpm manage:facilities:audit && pnpm audit:geospatial && pnpm sync:all && pnpm audit:logic"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/rss": "^4.0.15",
    "@astrojs/sitemap": "^3.7.0",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.17.1",
    "chart.js": "^4.5.1",
    "fuse.js": "^7.1.0",
    "leaflet": "^1.9.4",
    "leaflet.markercluster": "^1.5.3",
    "pagefind": "^1.4.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/leaflet": "^1.9.21",
    "@types/leaflet.markercluster": "^1.5.6",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-plugin-astro": "^1.5.0",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.7",
    "jsonwebtoken": "^9.0.3",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "stylelint": "^17.1.1",
    "stylelint-config-standard": "^40.0.0"
  }
}
